<head>
    <%- include('head'); %>

    <link rel="stylesheet" type="text/css" href="../stylesheets/section.css">

</head>

<body>
<div class="wrapper">

    <header>
        <%- include('header'); %>
    </header>
<div class = "main_section">
    <div class="filters">
        <h2 class = "filters1">Filters</h2>
        <form class = "categories_filters_form">
            <input id = "teg1" class="teg_all" type="radio">
            <label for="teg1">First categories</label>
        </form>
        <form class = "categories_filters_form">
            <input id = "teg2" type="radio" class="teg_all">
            <label for="teg2">Second categories</label>
        </form>
        <form class = "categories_filters_form">
            <input id = "teg3" type="radio" class="teg_all">
            <label for="teg3">Third categories</label>
        </form >
        <form class = "categories_filters_form">
            <input id = "teg4" type="radio" class="teg_all">
            <label for="teg4">Fours categories</label>
        </form>
    </div>

    <form class = "section" name="comment" action="" method="post">
        <input class="section_search" id = "button_reg" type="submit" name="submit" value="Confirm">
    </form>


    <div class = "posts">
        <h2>Posts</h2>
        <% for (var i = 0; i < posts.length; i += 1) { %>
            <div class="container">
                <div class="article">
                    <a href = "/article/<%= posts[i].post_id %>" class="article-header"><%= posts[i].post_name %></a>
                    <div class="article-autor"><%= posts[i].post_author %></div>
                    <div class="article-post-time"><%= posts[i].pub_date.toLocaleDateString('en-GB').replaceAll('/','.') %></div>
                    <p class="article-text"><%= posts[i].post_content %></p>
                </div>
                <div class = "img_comment">
                    <img src="<%= posts[i].post_pict%>" alt="Здесь должна была быть картинка">
                </div>
            </div>
        <% } %>
    </div>



    <footer>
        <%- include('footer'); %>
    </footer>
</div>
</div>
</body>

